<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_round_card"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">
    <ImageView
            android:id="@+id/item_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@mipmap/ic_launcher"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    <TextView
            android:id="@+id/item_title"
            app:layout_constraintTop_toTopOf="@+id/item_icon"
            app:layout_constraintBottom_toBottomOf="@+id/item_icon"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceListItem"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="title"/>
    <TextView
            android:id="@+id/item_message"
            app:layout_constraintTop_toBottomOf="@+id/item_icon"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="message"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_actions"
            app:layout_constraintTop_toBottomOf="@+id/item_message"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:orientation="horizontal"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_action"
            tools:itemCount="3"
            tools:ignore="RtlSymmetry"/>
</androidx.constraintlayout.widget.ConstraintLayout>