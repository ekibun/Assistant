<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_card"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/item_content"
            app:layout_constraintStart_toStartOf="@+id/item_content"
            app:layout_constraintEnd_toEndOf="@+id/item_content"
            android:clipToPadding="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            tools:orientation="vertical"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:reverseLayout="true"
            tools:itemCount="4"
            tools:listitem="@layout/item_card"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="30dp"
            android:background="@drawable/bg_round_dialog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_max="700dp"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="KeyboardInaccessibleWidget">
        <EditText
                android:id="@+id/input_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@null"
                android:padding="16dp"
                android:hint="@string/hint_input_message"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:autofillHints="@string/hint_input_message">
            <requestFocus/>
        </EditText>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_action"
                app:layout_constraintTop_toBottomOf="@+id/input_message"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:orientation="horizontal"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_action"
                tools:ignore="RtlSymmetry"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>